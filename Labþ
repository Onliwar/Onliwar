import logging


logging.basicConfig(level=logging.INFO)


logger = logging.getLogger('baseloader')


coin_logger = logging.getLogger('coinbaseloader')


def some_function():
    logger.info("Це повідомлення від baseloader")
    coin_logger.info("Це повідомлення від coinbaseloader")

some_function()
class CustomFormatter(logging.Formatter):
    
    def format(self, record):
        log_format = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        formatter = logging.Formatter(log_format)
        return formatter.format(record)

custom_formatter = CustomFormatter()


file_handler = logging.FileHandler('baseloader.log')
file_handler.setFormatter(custom_formatter)
logger.addHandler(file_handler)


coin_file_handler = logging.FileHandler('coinbaseloader.log')
coin_file_handler.setFormatter(custom_formatter)
coin_logger.addHandler(coin_file_handler)
